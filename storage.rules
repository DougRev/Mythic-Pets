rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in a user-specific folder.
    // The {userId} wildcard captures the user's ID from the path.
    match /users/{userId}/{allPaths=**} {
      // Allow read, write (create, update, delete) operations if the
      // requesting user's ID matches the {userId} in the path.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
